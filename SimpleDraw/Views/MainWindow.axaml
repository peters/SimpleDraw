<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SimpleDraw.Views;assembly=SimpleDraw"
        xmlns:vm="clr-namespace:SimpleDraw.ViewModels;assembly=SimpleDraw"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="1100" Height="640"
        WindowState="Normal" WindowStartupLocation="CenterScreen"
        x:Class="SimpleDraw.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SimpleDraw">

    <Design.DataContext>
        <vm:CanvasViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="120,*">
        
        <ListBox Items="{Binding Tools}" SelectedItem="{Binding Tool}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <local:SimpleCanvas Background="WhiteSmoke" Width="{Binding Width}" Height="{Binding Height}" Grid.Column="1">

        </local:SimpleCanvas>
        
    </Grid>
    
</Window>
